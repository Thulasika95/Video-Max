<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryList"
    android:background="@drawable/bg">


    <ScrollView
        android:layout_width="730dp"
        android:layout_height="410dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/text1"
                android:textColor="#000000"
                android:text="Movie Interested Areas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Action Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <CheckBox
                android:id="@+id/adventure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Adventure Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/action"
                app:layout_constraintTop_toBottomOf="@+id/action" />

            <CheckBox
                android:id="@+id/comedy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Comedy Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/adventure"
                app:layout_constraintTop_toBottomOf="@+id/adventure" />

            <CheckBox
                android:id="@+id/horror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Horror Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/comedy"
                app:layout_constraintTop_toBottomOf="@+id/comedy" />

            <CheckBox
                android:id="@+id/science_fiction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Science Fiction Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/horror"
                app:layout_constraintTop_toBottomOf="@+id/horror" />

            <CheckBox
                android:id="@+id/thriller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Thriller Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/science_fiction"
                app:layout_constraintTop_toBottomOf="@+id/science_fiction" />

            <CheckBox
                android:id="@+id/romance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Romance Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/thriller"
                app:layout_constraintTop_toBottomOf="@+id/thriller" />

            <CheckBox
                android:id="@+id/animated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Animated Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/romance"
                app:layout_constraintTop_toBottomOf="@+id/romance" />

            <CheckBox
                android:id="@+id/Cartoons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cartoon Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/animated"
                app:layout_constraintTop_toBottomOf="@+id/animated" />

            <CheckBox
                android:id="@+id/crime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="184dp"
                android:layout_marginTop="108dp"
                android:fontFamily="@font/text3"
                android:text="Crime Movies"
                app:layout_constraintStart_toEndOf="@+id/action"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/fantasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Fantasy Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/crime"
                app:layout_constraintTop_toBottomOf="@+id/crime" />

            <CheckBox
                android:id="@+id/historical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Historical Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/fantasy"
                app:layout_constraintTop_toBottomOf="@+id/fantasy" />

            <CheckBox
                android:id="@+id/mystery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Mystery Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/historical"
                app:layout_constraintTop_toBottomOf="@+id/historical" />

            <CheckBox
                android:id="@+id/philosophical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Philosophical Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/mystery"
                app:layout_constraintTop_toBottomOf="@+id/mystery" />

            <CheckBox
                android:id="@+id/political"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Political Movies"
                android:fontFamily="@font/text3"
                app:layout_constraintStart_toStartOf="@+id/philosophical"
                app:layout_constraintTop_toBottomOf="@+id/philosophical" />

            <Button
                android:id="@+id/submit"
                android:layout_width="159dp"
                android:layout_height="70dp"
                android:layout_marginStart="444dp"
                android:layout_marginTop="436dp"
                android:background="@drawable/submit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>